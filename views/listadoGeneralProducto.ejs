<!DOCTYPE html>
<html lang="en">

<%- include('partials/head') %> 
<title>Listado Productos</title>

<body>

    <%- include('partials/header') %>
    
    
    <section class="seccionProductos">
        

      <div class="containerProductos">


          <div class="contenidoProductos">
            
            <h3>Listado de Productos</h3>
            
            <div class="filtroProductos">
              <h4>Filtros:</h4>
            </div>

            <div class="listadoProductos">

            <% product.forEach(product => { %>
             
           
                <div class="articuloProductos">
                 
                  <div>
                  <a href="/productos/detalle/<%= product.id %> "> <img class="img_articulos" src="/img/<%= product.image %>" alt=""> </a> 
                  </div>
                   <div class="tituloPrecioProducto">
                     <h5><%= product.name %> </h5>
                     <h6><%= product.price %> </h6>
                   </div> 
                 </div>

            <% }) %>     
            
            </div>
         </div>


      </div>


    </section>



    <%- include('partials/footer') %> 
    
</body>
</html>