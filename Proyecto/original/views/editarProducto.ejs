<!DOCTYPE html>
<html lang="en">

<%- include('partials/head') %> 
<title>Editar Producto</title>

<body>
    
    <!-- header -->
    <%- include('partials/header') %>
    
    <main>
      
        <section class="editarProducto">
       
          <div class="editarProducto_container">
        
            <div class="editarProducto_contenido">
                  
              <div class="tituloNuevaCuenta"> 
              <i class="fas fa-magic"></i>
              <h3 id="h3CrearProducto">Estas editando: <%= productToEdit.name %> </h3>
              </div> 
              
              <div class="cuestionarioEditarProducto">
                
                <form id="formDatosPersonales" action="/products/edit/<%= productToEdit.id %>?_method=PUT" method="POST">
                   
                    <div class="datosEditarProductos">
                    
                      <p><strong>Ingrese datos del producto:</strong></p><br> 
      
                        <label for="nombre">Nombre: </label><br>
                        <input type="text" name="name" id="name" placeholder="Aros de oro" required>
                        <br>
                        <label for="apellido">Precio:</label><br>
                        <input type="text" name="price" id="price" placeholder="3000" required>
                        <br>
                        <p>Seleccione Categor√≠a:</p> <br>
                        <label for="categoria">General</label>
                        <input type="checkbox" name="categoria" id="general" value="general">
                        <label for="categoria">Destacado</label>
                        <input type="checkbox" name="categoria" id="destacado" value="destacado">
                  
                    </div>
             
                    <div class="datosProductos2">

                      <p><strong>Mas datos:</strong></p><br>

                      <label for="textarea">Descripcion:</label><br>
                      <input type="textarea" name="descripcion" id="descripcion" placeholder="Descripcion del Producto" required>
                      <br>

                      <p>Seleccione Talle:</p> <br>
                      
                      <div class="seleccionTalle">
                      <label for="talle">S</label>
                      <input type="radio" name="talle" value="s">
                      <label for="talle">M</label>
                      <input type="radio" name="talle" value="m">
                      <label for="talle">L</label>
                      <input type="radio" name="talle" value="l">
                      <label for="talle">Sin talle</label>
                      <input type="radio" name="talle" value="st"> 
                      </div>
                      <br>

                      <label for="foto">Foto Producto</label><br>
                      <input type="file" name="fotoProducto" id="fotoProducto" placeholder="Seleccione Foto">
                    </div>
                  
                    <button type="submit" id="botonNuevaCuenta">EDITAR PRODUCTO</button>
              
                </form>

              </div>

       </section>     
    

    <%- include('partials/footer') %> 
     
</body>



</html>